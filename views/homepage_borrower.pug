.container
  // apply for loan
  form(action=action1 method='get')
    #loan_eligibility.col-sm-12.col-md-12.col-lg-12.loan_card(style='display: none;')
      h3.text-left Loan Details
      hr
      .row
        .col-lg-4.col-md-4.col-sm-12.col-xs-12(style='display: -webkit-inline-box;')
          i.fa.fa-database
          .group
            input(type='number' name='amount' value=amount required='')
            span.highlight
            span.bar
            label Loan Amount
        .col-lg-4.col-md-4.col-sm-12.col-xs-12(style='display: -webkit-inline-box;')
          i.glyphicon.glyphicon-calendar
          .group
            input(type='text' name='tenure' value=tenure required='')
            span.highlight
            span.bar
            label Tenure of Loan
        .col-lg-4.col-md-4.col-sm-12.col-xs-12(style='display: -webkit-inline-box;')
          i.glyphicon.glyphicon-calendar
          .group
            input(type='text' name='purpose' value=purpose required='')
            span.highlight
            span.bar
            label Purpose
      .row
        .col-lg-4.col-md-4.col-sm-12.col-xs-12(style='display: -webkit-inline-box;')
          i.glyphicon.glyphicon-list
          .group
            input(type='text' name='description' value=description required='')
            span.highlight
            span.bar
            label Description of Loan Purpose
        .col-lg-4.col-md-4.col-sm-12.col-xs-12(style='display: -webkit-inline-box;')
          i.fa.fa-database
          .group
            input(type='text' name='interest' value=interest required='')
