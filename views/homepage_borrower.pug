  });
  $("#btn_loan_apply").click(function(){
  $("#loan_eligibility").show();
  $("#current_loan").hide();
  $("#loan_apply").hide();
  $("#document_verified").hide();
  });
  $("#btn_current_loan").click(function(){
  $("#loan_eligibility").hide();
  $("#current_loan").show();
  $("#loan_apply").hide();
  $("#document_verified").hide();
  });
  $("#btn_document_verification").click(function(){
