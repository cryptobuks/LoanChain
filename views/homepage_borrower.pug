            .row
              .col-lg-12.col-md-12.col-sm-12.col-xs-12(style='display: -webkit-inline-box;')
                i.glyphicon.glyphicon-map-marker
                .group
                  input(type='text' name='residence' value=residence required='')
                  span.highlight
                  span.bar
                  label Residential Type
            .row
              .col-lg-6.col-md-6.col-sm-12.col-xs-12(style='display: -webkit-inline-box;')
                i.fa.fa-money
                .group
                  input(type='number' name='sp_inc' value=sp_inc required='')
                  span.highlight
                  span.bar
                  label Spouse Monthly Income (in Rs)
              .col-lg-6.col-md-6.col-sm-12.col-xs-12(style='display: -webkit-inline-box;')
                i.fa.fa-money
                .group
                  input(type='number' name='other_inc' value=other_inc required='')
                  span.highlight
                  span.bar
                  label Any Other Monthly Income (in Rs)
            .row
              .col-lg-6.col-md-6.col-sm-12.col-xs-12
                span(style='font-size:15px;margin-left:20px;') Do You have any Loan running?
                .row
                  .col-lg-1.col-md-1
                    i.fa.fa-database(style='font-weight:600;font-size:18px;margin-top:10px;')
                  .col-lg-4.col-md-4(style='margin-left:20px;')
                    .radio
                      span
                        input(type='radio' name='current_loan' value='Yes' style='width:auto !important;')
                        |  Yes
                  .col-lg-4.col-md-4(style='margin-left:20px;')
                    .radio
                      span
                        input(type='radio' name='current_loan' value='No' style='width:auto !important;')
                        |  No
            .row
              .col-lg-6.col-md-6.col-sm-12.col-xs-12
                span(style='font-size:15px;margin-left:20px;') Do You have any Credit cards?
                .row
                  .col-lg-1.col-md-1
                    i.fa.fa-credit-card(style='font-weight:600;font-size:18px;margin-top:10px;')
                  .col-lg-4.col-md-4(style='margin-left:20px;')
                    .radio
                      span
                        input(type='radio' name='credcards' value='Yes' style='width:auto !important;')
                        |  Yes
                  .col-lg-4.col-md-4(style='margin-left:20px;')
                    .radio
                      span
                        input(type='radio' name='credcards' value='No' style='width:auto !important;')
