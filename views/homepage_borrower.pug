            span.bar
            label Interest
        .col-lg-4.col-md-4.col-sm-12.col-xs-12(style='display: -webkit-inline-box;')
          .col-lg-2.col-md-2.col-sm-6.col-xs-6(style='display: -webkit-inline-box;width: 50%;')
            i.fa.fa-database
            .group
              input(type='text' style='width: 50%;' name='emi' value=emi required='')
              span.highlight
              span.bar
              label EMI
          .col-lg-2.col-md-2.col-sm-6.col-xs-6
            button.btn.btn-primary(type='button' style='margin-top: 50px;') Calculate 
      .row
        .col-sm-12.col-md-12.col-lg-12.loan_card(id='')
          .col-lg-4.col-md-4.col-sm-12.col-xs-12(style='display: -webkit-inline-box;')
          .col-lg-4.col-md-4.col-sm-12.col-xs-12(style='display: -webkit-inline-box;')
            button.btn.btn-primary(type='submit' style='margin-top:30px;width: 330px;') Apply for Loan
          .col-lg-4.col-md-4.col-sm-12.col-xs-12(style='display: -webkit-inline-box;')
  // check for loan eligibility
  #loan_apply(style='display:none;')
    .container.loan_card(style='background:#fff;')
      form(action='check_eligibility' method='post')
        .row
          .col-md-12
            h3.text-left Loan Details
            hr
            .row
              .col-lg-4.col-md-4.col-sm-12.col-xs-12(style='display: -webkit-inline-box;')
                i.fa.fa-database
                .group
                  input(type='number' name='amount' value=amount required='')
                  span.highlight
                  span.bar
                  label Loan Amount
              //
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12"><i class="glyphicon glyphicon-user"></i>
                <input type="text" placeholder="First Name">
                </div>
              .col-lg-4.col-md-4.col-sm-12.col-xs-12(style='display: -webkit-inline-box;')
                i.glyphicon.glyphicon-calendar
                .group
                  input(type='text' name='tenure' value=tenure required='')
                  span.highlight
                  span.bar
                  label Tenure of Loan
              .col-lg-4.col-md-4.col-sm-12.col-xs-12(style='display: -webkit-inline-box;')
                i.glyphicon.glyphicon-calendar
                .group
                  input(type='text' name='purpose' value=purpose required='')
                  span.highlight
                  span.bar
                  label Purpose
            .row
              .col-lg-12.col-md-12.col-sm-12.col-xs-12(style='display: -webkit-inline-box;')
                i.glyphicon.glyphicon-list
                .group
                  input(type='text' name='description' value=description required='')
                  span.highlight
                  span.bar
                  label Description of Loan Purpose
            br
            h3.text-left Personal Details
            hr
            .row
              .col-lg-6.col-md-6.col-sm-12.col-xs-12
                .row
                  .col-lg-1.col-md-1
                    i.fa.fa-intersex(style='font-weight:600;font-size:18px;margin-top:10px;')
                  .col-lg-4.col-md-4(style='margin-left:20px;')
                    .radio
                      span
                        input(type='radio' name='marital_status' value='Single' style='width:auto !important;')
                        |  Single
                  .col-lg-4.col-md-4(style='margin-left:20px;')
                    .radio
                      span
                        input(type='radio' name='marital_status' value='Married' style='width:auto !important;')
                        |  Married
              .col-lg-6.col-md-6.col-sm-12.col-xs-12(style='display: -webkit-inline-box;')
                i.glyphicon.glyphicon-calendar
                .group
                  input(type='date' name='dob' value=dob required='')
                  span.highlight
                  span.bar
            .row
              .col-lg-6.col-md-6.col-sm-12.col-xs-12(style='display: -webkit-inline-box;')
                i.fa.fa-building
                .group
                  input(type='number' name='pincode' value=pincode required='')
                  span.highlight
                  span.bar
                  label Pincode
              .col-lg-6.col-md-6.col-sm-12.col-xs-12(style='display: -webkit-inline-box;')
                i.fa.fa-building
                .group
                  input(type='text' name='city' value=city required='')
                  span.highlight
                  span.bar
                  label City
            br
            h3.text-left Employment Details
            hr
            .row
              .col-lg-6.col-md-6.col-sm-12.col-xs-12(style='display: -webkit-inline-box;')
                i.glyphicon.glyphicon-user
